---
import { ViewTransitions } from "astro:transitions";
import TopNav from "../components/TopNav.astro";
import Footer from "../components/Footer.astro";
import "../styles/theme.css";

const { title, navTitle, navLinks = [] } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <TopNav title={navTitle ?? title} links={navLinks} />
    <main>
      <div class="container">
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>
